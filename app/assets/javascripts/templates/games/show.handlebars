<h3>{{game.name}} | {{game.rating}}</h3>
<h4>Released on {{game.release}}</h4>
<p>{{game.comment}}</p>

{{#if isEditing}}
  {{view MyGames.EditGameView}}
{{else}}
  {{game.name}}
{{/if}}

{{#unless isEditing}}
<a href="#" {{action "showEdit"}}>Edit</a>
<a href="#" {{action "destroyRecord"}}>Remove</a>
{{/unless}}